set GD_Weap_Shotgun.Barrel.SG_Barrel_Hyperion_Striker AttributeSlotUpgrades ((SlotName="WeaponAccuracyImpulse",GradeIncrease=300,bActivateSlot=True),(SlotName="AccuracyMax",GradeIncrease=17,bActivateSlot=True),

set GD_Weap_Shotgun.ManufacturerMaterials.Mat_Bandit_5_Legendary Material MaterialInstanceConstant 'Aster_GunMaterials.Materials.Shotgun.Mati_Torgue_Rock_SG'

