#Changes the percentage of HP and Shield you have when getting a second wind or being revived by another player (stats exist for Res but thats 100% both by default anyway)
#Rejuvenated = Second Wind | Revived = Revived by Teammate
#1.000000 = 100%
#Thanks to Mike/Soze for originally finding the code

set GD_PlayerShared.injured.PlayerInjuredDefinition RejuvenatedShieldPctOfMax 0.900000
set GD_PlayerShared.injured.PlayerInjuredDefinition RevivedShieldPctOfMax 1.00000

set GD_PlayerShared.injured.PlayerInjuredDefinition RejuvenatedHealthPctOfMax 0.250000
set GD_PlayerShared.injured.PlayerInjuredDefinition RevivedHealthPctOfMax 1.000000
